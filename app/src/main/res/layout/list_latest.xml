<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="114dp"
    android:layout_height="149dp"
    android:layout_marginStart="11dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_console"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/console"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/iv_console"
        android:src="@drawable/fab"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_console"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_form"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/Games"
        android:textColor="@color/black"
        android:textSize="6sp"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_console"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:elevation="10dp"
        android:text="@string/playstation_5_console"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_90000"
        android:textColor="@color/white"
        android:textSize="7sp"
        android:textStyle="bold"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>