<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="174dp"
    android:layout_height="221dp"
    android:layout_marginStart="11dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sneakers"
        android:layout_width="174dp"
        android:layout_height="221dp"
        android:src="@drawable/shose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_photo_feedback"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_fab"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/iv_sneakers"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_like"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/iv_sneakers"
        android:src="@drawable/like"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_category"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_form"
        android:gravity="center"
        android:text="@string/kids"
        android:textColor="@color/black"
        android:textSize="6sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_discount"
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:elevation="11dp"
        android:gravity="center"
        android:text="@string/discount"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_discount"
        app:layout_constraintEnd_toEndOf="@id/iv_discount"
        app:layout_constraintStart_toStartOf="@id/iv_discount"
        app:layout_constraintTop_toTopOf="@id/iv_discount"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_discount"
        android:layout_width="49dp"
        android:layout_height="18dp"
        android:elevation="10dp"
        android:src="@drawable/discount"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sneakers"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:text="@string/new_balance_sneakers"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cost"
        android:layout_width="43dp"
        android:layout_height="12dp"
        android:text="@string/money_flash"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>